<p id="notice"><%= notice %></p>

<h1>Modifications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Server</th>
      <th>Edit server</th>
      <th>Delete server</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modifications.each do |modification| %>
      <tr>
        <td><%= modification.user_id %></td>
        <td><%= modification.server_id %></td>
        <td><%= modification.edit_server %></td>
        <td><%= modification.delete_server %></td>
        <td><%= modification.comments %></td>
        <td><%= link_to 'Show', modification %></td>
        <td><%= link_to 'Edit', edit_modification_path(modification) %></td>
        <td><%= link_to 'Destroy', modification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Modification', new_modification_path %>
