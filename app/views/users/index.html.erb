<p id="notice"><%= notice %></p>
<h1>Users</h1>
<%= form_tag users_path, class: 'searchbox', :method => 'get' do %>
  <%= text_field_tag :search, params[:search], placeholder: "Enter search params..."%>
  <%= submit_tag "Search" %>
<% end %>

<table id = "steelBlueCols">
  <thead>
    <tr>
      <th>Username</th>
      <th>Admin</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-default"%>
