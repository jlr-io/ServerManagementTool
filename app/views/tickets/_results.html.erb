<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>User id: </th>
      <th>Admin id: </th>
      <th>Status: </th>
      <th>Server: </th>
      <th>Ticket type: </th>
      <th>Comments: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <% if !ticket.complete %>
        <tr>
          <td><%= ticket.user_id %></td>
          <td><%= ticket.admin_id %></td>
          <td>
            <% if ticket.accepted %>
              <%= "Accepted" %>
            <% else %>
              <%= "Unaccepted" %>
            <% end %>
          </td>
          <td><%= ticket.server_id %></td>
          <td><%= ticket.ticket_type %> </td>
          <td><%= ticket.comments %></td>
          <td><%= link_to 'Show', ticket %></td>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

