<p id="notice"><%= notice %></p>
<h1>Servers</h1>
  <%= form_tag pending_path, class: 'searchbox', :method => 'get' do %>
    <%= text_field_tag :search, params[:search], placeholder: "Enter search params..."%>
    <%= submit_tag "Search" %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Status</th></th>
      <th>Asset</th>
      <th>Hostname</th>
      <th>Os requested</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <% if !server.approved && (server.user_id == current_user.id || current_user.admin) %>
        <td><%= server.user_id %></td>
        <td><%= "Pending" %></td>
        <td><%= server.asset %></td>
        <td><%= server.hostname %></td>
        <td><%= server.os_requested %></td>
        <td><%= link_to 'Show', server, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_server_path(server), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', server, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Server', new_server_path, class: "btn btn-default" %>
