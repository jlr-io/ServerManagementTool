<p id="notice"><%= notice %></p>
<style>
table {
  border: 3px solid #000000;
  width: 100%;
  text-align: left;
  border-collapse: collapse;
}
table td, table th {
  border: 1px solid #000000;
  padding: 5px 4px;
}
table tbody td {
  font-size: 13px;
}
table thead {
  background: #CFCFCF;
  background: -moz-linear-gradient(top, #dbdbdb 0%, #d3d3d3 66%, #CFCFCF 100%);
  background: -webkit-linear-gradient(top, #dbdbdb 0%, #d3d3d3 66%, #CFCFCF 100%);
  background: linear-gradient(to bottom, #dbdbdb 0%, #d3d3d3 66%, #CFCFCF 100%);
  border-bottom: 3px solid #000000;
}
table thead th {
  font-size: 15px;
  font-weight: bold;
  color: #000000;
  text-align: left;
}
table tfoot {
  font-size: 14px;
  font-weight: bold;
  color: #000000;
  border-top: 3px solid #000000;
}
tables tfoot td {
  font-size: 14px;
}

</style>
<h1>Servers</h1>

<table>
  <thead>
    <tr>
      <% if current_user.admin %>
      <th>User</th>
      <th>Approved</th>
      <th>Asset</th>
      <% end %>
      <th>Hostname</th>
      <th>Location</th>
      <th>Environment</th>
      <th>Os requested</th>
      <th>Disk size</th>
      <th>Eng team sme contact</th>
      <th>Eng team manager contact</th>
      <th>Application sme</th>
      <th>Application team distro group</th>
      <th>Application manager</th>
      <th>Application director</th>
      <th>Line of business</th>
      <th>Virtual machine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <% if current_user.admin %>
          <td><%= server.user_id %></td>
          <td><%= server.approved %></td>
          <td><%= server.asset %></td>
        <% end %>
        <td><%= server.hostname %></td>
        <td><%= server.location %></td>
        <td><%= server.environment %></td>
        <td><%= server.os_requested %></td>
        <td><%= server.disk_size %></td>
        <td><%= server.eng_team_sme_contact_id %></td>
        <td><%= server.eng_team_manager_contact_id %></td>
        <td><%= server.application_sme_id %></td>
        <td><%= server.application_team_distro_group %></td>
        <td><%= server.application_manager_id %></td>
        <td><%= server.application_director_id %></td>
        <td><%= server.line_of_business %></td>
        <td><%= server.virtual_machine %></td>
        <td><%= link_to 'Show', server, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_server_path(server), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', server, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

